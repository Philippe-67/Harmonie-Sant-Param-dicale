@model Rdv

<h2>Créer un nouveau Rendez-vous</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Date"></label>
        <input asp-for="Date" class="form-control" />
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NomPatient"></label>
        <input asp-for="NomPatient" class="form-control" />
        <span asp-validation-for="NomPatient" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NomPraticien"></label>
        <input asp-for="NomPraticien" class="form-control" />
        <span asp-validation-for="NomPraticien" class="text-danger"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Enregistrer</button>
    </div>
</form>
